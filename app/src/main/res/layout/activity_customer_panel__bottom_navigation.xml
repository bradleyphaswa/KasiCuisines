<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerPanel_BottomNavigation">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/c_fragment_container"
        android:layout_above="@id/c_bottom_nav"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_bottom_nav"
        android:backgroundTint="@color/colorWhite"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/colorPrimaryText"
        app:itemTextColor="@color/menu_item_color"
        app:menu="@menu/customer_bottom_navigation"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>